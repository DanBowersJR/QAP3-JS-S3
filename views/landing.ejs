<%- include('partials/header', { title: "Dashboard" }) %>

<h1>Welcome, <%= user.username %>!</h1>

<% if (user.role === 'admin') { %>
    <h2>Admin Dashboard: All Registered Users</h2>
    <table border="1">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((registeredUser) => { %>
                <tr>
                    <td><%= registeredUser.username %></td>
                    <td><%= registeredUser.email %></td>
                    <td><%= registeredUser.role %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <h2>User Dashboard</h2>
    <p>This is your personal dashboard. More features coming soon!</p>
<% } %>

<a href="/logout">Logout</a>

<%- include('partials/footer') %>
